                                    </StackLayout>

                                    <StackLayout Grid.Row="2">
                                        <Label
                                        FontFamily="Nunito"
                                        Text="Tanggal"
                                        FontSize="14"
                                        TextColor="#7A7585"
                                        Margin="0,10,0,0"
                                        />

                                    </StackLayout>

                                    <StackLayout Grid.Row="3">
                                        <Label
                                        FontFamily="Nunito"
                                        Text="Jumat, 26 Februari 2021"
                                        FontSize="16"
                                        TextColor="#444444"
                                        Margin="0,0,0,0"
                                        FontAttributes="Bold"
                                        />

                                    </StackLayout>

                                    <StackLayout Grid.Row="4">
                                        <Label
                                        FontFamily="Nunito"
                                        Text="Waktu"
                                        FontSize="14"
                                        TextColor="#7A7585"
                                        Margin="0,10,0,0"
                                        />

                                    </StackLayout>

                                    <StackLayout Grid.Row="5">
                                        <Label
                                        FontFamily="Nunito"
                                        Text="08.00 WIB"
                                        FontSize="16"
                                        TextColor="#444444"
                                        Margin="0,0,0,0"
                                        FontAttributes="Bold"
                                        />

                                    </StackLayout>

                                    <StackLayout Grid.Row="6">
                                        <Label
                                        FontFamily="Nunito"
                                        Text="Durasi"
                                        FontSize="14"
                                        TextColor="#7A7585"
                                        Margin="0,10,0,0"
                                        />

                                    </StackLayout>

                                    <StackLayout Grid.Row="5">
                                        <Label
                                        FontFamily="Nunito"
                                        Text="15 Menit"
                                        FontSize="16"
                                        TextColor="#444444"
                                        Margin="0,0,0,0"
                                        FontAttributes="Bold"
                                        />

                                    </StackLayout>

                                </StackLayout>


                            </Grid>

                        </Frame>

                    </HorizontalStackLayout>


                    <HorizontalStackLayout
                    Margin="0,14,0,0">

                        <Frame
                        Padding="20,12,20,12"
                        CornerRadius="23"
                        BorderColor="#F2F2F2"
                        >

                            <Grid ColumnDefinitions="150,125">
                                <StackLayout Grid.Column="0">
                                    <HorizontalStackLayout>
                                        <Image
                                                Source="percent.svg"
                                                WidthRequest="22"
                                                HeightRequest="22"
                                                Margin="0,0,8,0">
                                        </Image>
                                        <Button
                                        FontFamily="Nunito"
                                        Text="Masukkan Kode Voucher"
                                        FontSize="14"
                                        TextColor="#313131"
                                        Margin="0,0,0,0"
                                        Padding="0,0,0,0"
                                        BackgroundColor="Transparent"
                                        VerticalOptions="Center"
                                        Clicked="Diskon"
                                        />
                                    </HorizontalStackLayout>
                                </StackLayout>

                                <StackLayout Grid.Column="1" HorizontalOptions="End" VerticalOptions="Center">

                                    <ImageButton 
                                    Source="smallrightarrow.svg"
                                    WidthRequest="6"
                                    HeightRequest="10"
                                    
                                />

                                </StackLayout>

                            </Grid>

                        </Frame>

                    </HorizontalStackLayout>

                    <HorizontalStackLayout>

                        <Frame
                        Padding="20,24,20,24"
                        CornerRadius="23"
                        BorderColor="#F2F2F2"
                        Margin="0,14,0,0">

                            <Grid RowDefinitions="30,20,20,40">

                                <StackLayout Grid.Row="0">

                                    <Label FontFamily="Nunito"
                                        Text="Ringkasan Pemesanan"
