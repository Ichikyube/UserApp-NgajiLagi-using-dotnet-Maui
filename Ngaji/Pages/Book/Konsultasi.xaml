                                        FontFamily="Nunito"
                                        Text="Jadwal Mengaji"
                                        FontSize="14"
                                        TextColor="#313131"
                                        Margin="0,0,0,0"
                                        FontAttributes="Bold"
                                        />
                                            </HorizontalStackLayout>
                                        </StackLayout>

                                        <StackLayout Grid.Column="1" HorizontalOptions="End" VerticalOptions="Center">

                                            <Button
                                        FontFamily="Nunito"
                                        Text="Ganti"
                                        FontSize="12"
                                        TextColor="#2F80ED"
                                        BackgroundColor="Transparent"
                                        Margin="0,0,0,0"
                                        Padding="0,0,0,0"
                            
                                        />

                                        </StackLayout>

                                    </Grid>
                                </StackLayout>

                                <StackLayout Grid.Row="1">

                                    <StackLayout>
                                        <Line WidthRequest="279"
                                          HeightRequest="1.5"
                                          BackgroundColor="#F2F2F2">

