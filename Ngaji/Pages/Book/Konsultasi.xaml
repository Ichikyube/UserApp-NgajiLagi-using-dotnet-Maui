                    HorizontalOptions="Center"
                    Margin="0,0,0,28"
                    >

                        <Label 
                Text="Konfirmasi Pesananmu"
                FontSize="28"
                FontFamily="Nunito"
                FontAttributes="Bold"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />

                    </HorizontalStackLayout>

                    <HorizontalStackLayout Margin="0,0,0,14">

                        <Image
                        Source="ustadz.svg"
                        HeightRequest="70"
                        WidthRequest="70"
                        Margin="0,0,12,0">

                        </Image>

                        <VerticalStackLayout
                        VerticalOptions="Center">

                            <Label FontFamily="Nunito"
                               Text="Ustadz Fulan Fulana"
                               FontAttributes="Bold"
                               FontSize="18"
                               >

                            </Label>
                            <Label FontFamily="Nunito"
                               Text="Official Ngajilagi"
                               FontSize="14"
                               TextColor="#88984A">

                            </Label>

                        </VerticalStackLayout>

                    </HorizontalStackLayout>

                    <HorizontalStackLayout
                    Margin="0,0,0,14">

                        <Frame
                            Padding="20,22,20,22"
                            CornerRadius="33"
                            BorderColor="#F2F2F2">

                            <Grid ColumnDefinitions="150,125">
                                <StackLayout Grid.Column="0">

                                    <Label
                            FontFamily="Nunito"
                            Text="Mulai dari Awal"
                            FontSize="16"
                            TextColor="#313131"
                            Margin="0,0,0,0"
                            FontAttributes="Bold"
                            />
                                </StackLayout>

                                <StackLayout Grid.Column="1" HorizontalOptions="End" VerticalOptions="Center">

                                    <Button
                            FontFamily="Nunito"
                            Text="Ganti"
                            FontSize="12"
                            TextColor="#2F80ED"
                            BackgroundColor="Transparent"
                            Margin="0,0,0,0"
                            Padding="0,0,0,0"
                            
                            />

                                </StackLayout>
                            </Grid>
                        </Frame>

                    </HorizontalStackLayout>

                    <HorizontalStackLayout>
                        <Frame
                        Padding="20,24,20,24"
                        CornerRadius="18"
                        BorderColor="#F2F2F2"
                        >
                            <Grid RowDefinitions="30,20,20,20,20,20,54">
                                <StackLayout Grid.Row="0">

                                    <Grid ColumnDefinitions="150,125">
                                        <StackLayout Grid.Column="0">
                                            <HorizontalStackLayout>
                                                <Image
                                                Source="calender.svg"
                                                WidthRequest="15"
                                                HeightRequest="16"
                                                Margin="0,0,12,0">
