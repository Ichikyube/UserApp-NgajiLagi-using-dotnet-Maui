                                <StackLayout Grid.Row="1">

                                    <Grid ColumnDefinitions="150,125">
                                        <StackLayout Grid.Column="0">
                                            <HorizontalStackLayout>
                                                <Label
                                        FontFamily="Nunito"
                                        Text="Biaya Konsultasi"
                                        FontSize="13"
                                        TextColor="#7A7585"
                                        Margin="0,0,0,0"
                                        VerticalOptions="Center"
                                        />
                                            </HorizontalStackLayout>
                                        </StackLayout>

                                        <StackLayout Grid.Column="1" HorizontalOptions="End">
                                            <HorizontalStackLayout>
                                                <Label
                                        FontFamily="Nunito"
                                        Text="20.000"
                                        FontSize="14"
                                        TextColor="#313131"
                                        Margin="0,0,0,0"
                                        VerticalOptions="Center"
                                        />
                                            </HorizontalStackLayout>
                                        </StackLayout>

                                    </Grid>

                                </StackLayout>

                                <StackLayout Grid.Row="2"
                                         Margin="0,16,0,16">
                                    <Line     WidthRequest="279"
                                          HeightRequest="1.5"
                                          BackgroundColor="#F2F2F2">

                                    </Line>

                                </StackLayout>

                                <StackLayout Grid.Row="3"
                                         Margin="0,16,0,0">

                                    <Grid ColumnDefinitions="150,125">
                                        <StackLayout Grid.Column="0">
                                            <HorizontalStackLayout>
                                                <Label
                                        FontFamily="Nunito"
                                        Text="Total Pembayaran"
                                        FontSize="14"
                                        TextColor="#313131"
                                        Margin="0,0,0,0"
                                        VerticalOptions="Center"
                                        FontAttributes="Bold"
                                        />
                                            </HorizontalStackLayout>
                                        </StackLayout>

                                        <StackLayout Grid.Column="1" HorizontalOptions="End">
                                            <HorizontalStackLayout>
                                                <Label
                                        FontFamily="Nunito"
                                        Text="20.000"
                                        FontSize="14"
                                        TextColor="#FB511B"
                                        Margin="0,0,0,0"
                                        VerticalOptions="Center"
                                        FontAttributes="Bold"
                                        />
                                            </HorizontalStackLayout>
                                        </StackLayout>

                                    </Grid>

                                </StackLayout>

                            </Grid>

                        </Frame>

                    </HorizontalStackLayout>


                    <HorizontalStackLayout>

                        <Frame 
                        Padding="24,20,24,20"
                        Margin="0,20,0,0"
                        BorderColor="Transparent"
                        BackgroundColor="#FFD53F"
                        CornerRadius="32"
                        >
                            <Grid ColumnDefinitions="150,100,25">
                                <StackLayout Grid.Column="0" VerticalOptions="Center">
                                    <Button
                                FontFamily="Nunito"
                                Text="Pilih Pembayaran"
                                TextColor="#313131"
                                FontAttributes="Bold"
                                BackgroundColor="Transparent"
                                FontSize="18"
                                Padding="0,0,0,0"
                                >
                                    </Button>
                                </StackLayout>

                                <StackLayout Grid.Column="1" VerticalOptions="Center" HorizontalOptions="End">
                                    <Label FontFamily="Nunito"
                                Text="20.000"
                                TextColor="#313131"
                                FontAttributes="Bold"
                                BackgroundColor="Transparent"
                                FontSize="18"
                                >
                                    </Label>

                                </StackLayout>
                                <StackLayout Grid.Column="2" HorizontalOptions="End" VerticalOptions="Center" Margin="10,0,0,0">
                                    <ImageButton Source="yellowarrow.svg">
